@model OnlineRestaurant.ViewModels.ProductCategory

@{
    ViewData["Title"] = "Edit";
    SelectList categoryItems = new SelectList(Model.Categories, "Id", "Name");

}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<form asp-action="SaveEdit" method="post">
    <input type="hidden" asp-for="Id" />

    <label>Name</label>
    <input type="text" asp-for="Name" class="form-control" required />

    <label>Description</label>
    <textarea asp-for="Description" class="form-control" required></textarea>

    <label>Price</label>
    <input type="number" asp-for="Price" class="form-control" step="5" required />

    <label>Stock</label>
    <input type="number" asp-for="Stock" class="form-control" step="1" required />

    <label>Category</label>
    <select asp-for="CategoryId" asp-items="categoryItems" class="form-control" required>
        <option value="">Select a Category</option>
    </select>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>


<div>
    <a asp-action="GetAll">Back to Products</a>
</div>


